<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:orientation="vertical">

    <!-- CURRENT CLASS SECTION -->
    <LinearLayout
        android:id="@+id/section_current"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/label_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOW"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/subject_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Subject"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="3"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 - 00:00"
                android:textSize="13sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/room_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#2196F3"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="6dp"
        android:visibility="gone"/>

    <!-- NEXT CLASS SECTION -->
    <LinearLayout
        android:id="@+id/section_next"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT UP"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#888888"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/subject_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Subject"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="3"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/time_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 - 00:00"
                android:textSize="13sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/room_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room"
                android:textSize="12sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#10333333"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
